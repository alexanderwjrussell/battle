<body style='text-align: center;'>
  <h1><%=@game.player1.name%> vs. <%=@game.player2.name%><h1>
  <h3><%=@game.player1.name%> HP: <%=@game.player1.hit_points%></h3>
  <h3><%=@game.player2.name%> HP: <%=@game.player2.hit_points%></h3>
  <form action="/attack">
    <label for="Attack">
      <input type="submit" value="Attack <%=@game.target_player.name%>">
    </label>
  </form>
  <form action="/paralyse">
    <label for="Paralyse">
      <input type="submit" value="Paralyse <%=@game.target_player.name%>">
    </label>
  </form>
  <form action="/poison">
    <label for="Poison">
      <input type="submit" value="Poison <%=@game.target_player.name%>">
    </label>
  </form>
  <form action="/sleep">
    <label for="Sleep">
      <input type="submit" value="Sleep <%=@game.target_player.name%>">
    </label>
  </form>
  <form action="/heal">
    <label for="Heal">
      <input type="submit" value="Heal <%=@game.current_player.name%>">
    </label>
  </form>
</body>
